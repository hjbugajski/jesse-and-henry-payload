{
  "name": "jesse-and-henry-payload",
  "description": "Payload project for Jesse's and Henry's wedding.",
  "version": "6.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts nodemon",
    "payload": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload",
    "payload:prod": "cross-env PAYLOAD_CONFIG_PATH=dist/payload.config.js payload",
    "build:payload": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload build",
    "build:server": "tsc",
    "build": "npm run copyfiles && npm run build:payload && npm run build:server",
    "serve": "cross-env PAYLOAD_CONFIG_PATH=dist/payload.config.js NODE_ENV=production node dist/server.js",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png}\" dist/",
    "generate:types": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:types",
    "generate:graphQLSchema": "PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:graphQLSchema",
    "eslint": "eslint . --ignore-path .gitignore",
    "prettier": "prettier --write . --ignore-unknown --ignore-path .gitignore",
    "stylelint": "npx stylelint '**/*.scss' --ignore-path .gitignore --fix",
    "release": "commit-and-tag-version -s",
    "release:minor": "commit-and-tag-version -s --release-as minor",
    "release:major": "commit-and-tag-version -s --release-as major",
    "release:custom": "commit-and-tag-version -s --release-as"
  },
  "dependencies": {
    "@faceless-ui/modal": "^2.0.1",
    "@payloadcms/bundler-webpack": "^1.0.4",
    "@payloadcms/db-mongodb": "^1.0.4",
    "@payloadcms/richtext-slate": "^1.0.7",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@swc/core": "^1.3.95",
    "ag-grid-community": "^30.2.0",
    "ag-grid-react": "^30.2.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "payload": "2.0.13",
    "qs": "^6.11.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "5.3.4",
    "react-select": "^5.7.7",
    "sharp": "^0.32.6",
    "webpack": "^5.89.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@types/express": "^4.17.20",
    "@types/node": "^20.8.9",
    "@types/react": "^18.2.33",
    "@types/react-dom": "^18.2.14",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "commit-and-tag-version": "^11.3.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.31",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.0.3",
    "stylelint": "^15.11.0",
    "stylelint-config-clean-order": "^5.2.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
